<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="211dp"
        android:layout_height="69dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="@string/register_hint_username"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="112dp"
        android:layout_height="43dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="124dp"
        android:gravity="center"
        android:text="@string/register_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edPass"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/register_hint_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edEmail" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="86dp"
        android:layout_height="42dp"
        android:layout_marginStart="32dp"
        android:gravity="center"
        android:text="@string/register_username"
        app:layout_constraintBottom_toBottomOf="@+id/edEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edEmail"
        app:layout_constraintVertical_bias="0.612" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="86dp"
        android:layout_height="42dp"
        android:text="@string/register_password"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/edPass"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/edPass" />

    <Button
        android:id="@+id/btRegister"
        android:layout_width="146dp"
        android:layout_height="64dp"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="128dp"
        android:text="@string/register_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>